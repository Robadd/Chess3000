<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess3000"
        xmlns:Custom="http://schemas.microsoft.com/surface/2008" x:Class="Chess3000.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="{Binding ElementName=mainGrid,Path=ActualHeight}"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>


        <Custom:TagVisualizerCanvas Margin="0" Name="TVC">
            <Custom:TagVisualizer Name="board" Height="{Binding ElementName=TVC,Path=ActualHeight}" Width="{Binding ElementName=TVC,Path=ActualWidth}">

            </Custom:TagVisualizer>
        </Custom:TagVisualizerCanvas>
        <Grid Grid.Column="1" Name="boardCanvas">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Rectangle Grid.ColumnSpan="8" Grid.Column="0" Grid.Row="0" Grid.RowSpan="8" Stroke="Black" StrokeThickness="2"/>
            <Custom:TagVisualizerCanvas Name="tagCanvas" Grid.ColumnSpan="8" Grid.RowSpan="8" />

        </Grid>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="22,103,0,0" TextWrapping="Wrap" Name="textblock" VerticalAlignment="Top" Width="73" Height="107"/>
    </Grid>



</Window>
